<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light.DarkActionBar"/>
    
    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/button_border</item>
    </style>
    
    <style name="HowToButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/how_to_button</item>
        <item name="android:textColor">@color/how_to_border</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="UndoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/undo_button</item>
        <item name="android:textColor">@color/undo_border</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="NewGameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/new_game_button</item>
        <item name="android:textColor">@color/new_game_border</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SignOutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sign_out_button</item>
        <item name="android:textColor">@color/sign_out_border</item>
    </style>

</resources>
